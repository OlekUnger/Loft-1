extends ../_template

block title
	title About me

block content
 
	section#content.content.aboutMePage
		include ../common/triangles
		.content_wrapper
			.content_item.content-left
				.titleWrapper
					h2.content_title.mainTitle Обо мне
				article.introduce
					.introduce_photo
						img(src='./assets/img/photo.jpg')
					.content_text
						h3.content_title.content_title-markedDark Кто я
